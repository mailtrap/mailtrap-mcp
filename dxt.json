{
  "name": "Mailtrap",
  "description": "Send emails and manage templates using Mailtrap",
  "version": "0.0.3",
  "author": "Railsware Products Studio LLC",
  "homepage": "https://mailtrap.io",
  "repository": "https://github.com/railsware/mailtrap-mcp",
  "main": "dist/dxt.js",
  "capabilities": [
    "mcp"
  ],
  "mcpServers": {
    "mailtrap": {
      "command": "node",
      "args": [
        "dist/index.js"
      ],
      "env": {
        "MAILTRAP_API_TOKEN": "${env:MAILTRAP_API_TOKEN}"
      }
    }
  }
}
